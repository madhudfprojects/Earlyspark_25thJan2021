<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:background="@drawable/layout_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:background="@drawable/shadow"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/heading_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Lesson Plan"
                android:textColor="#5C5757"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/sandboxlabel_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="start"
                    android:text="SandBox"
                    android:textColor="@color/blue"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/sandbox_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/dark_black_red"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/academiclabel_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="start"
                    android:text="Academic"
                    android:textColor="@color/blue"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/academic_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/dark_black_red"
                    android:textSize="15dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:orientation="horizontal"
                android:id="@+id/cluster_LL"
                android:layout_marginLeft="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/clusterlabel_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="start"
                    android:text="Cluster"
                    android:textColor="@color/blue"
                    android:textSize="15dp"
                    />


                <TextView
                    android:id="@+id/cluster_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/dark_black_red"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/Institutelabel_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="start"
                    android:text="Institute"
                    android:textColor="@color/blue"
                    android:textSize="15dp" />


                <TextView
                    android:id="@+id/Institute_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/dark_black_red"
                    android:textSize="15dp"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/Levellabel_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:gravity="start"
                    android:text="Level"
                    android:textColor="@color/blue"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/level_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/dark_black_red"
                    android:textSize="15dp" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:id="@+id/currentdayLP_label_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Current Day Lesson Plan"
                    android:textColor="#5C5757"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/currentdayLP_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/dark_black_red"
                    android:textSize="15sp" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_margin="8dp">
                <TextView
                    android:id="@+id/TakenLPlabel_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Taken Lesson Plan"
                    android:textColor="#5C5757"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/takenlp_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/dark_black_red"
                    android:textSize="15sp" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_margin="8dp">
                <TextView
                    android:id="@+id/confirmationstatuslabel_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Confirmation Status"
                    android:textColor="#5C5757"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/confirmationstatus_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/dark_black_red"
                    android:textSize="15dp" />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/confirmationremarkslabel_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remarks"
                    android:textColor="#5C5757"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/confirmationremarks_ET"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:background="@drawable/shadow_new"
                    android:inputType="textMultiLine"
                    android:gravity="center"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_margin="8dp">
                <TextView
                    android:id="@+id/LessonTakenDatelabel_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Lesson taken date"
                    android:textColor="#5C5757"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/LessonTakenDate_TV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/dark_black_red"
                    android:textSize="15dp" />



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/Question1_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question-1"
                    android:textColor="#5C5757"
                    android:textStyle="bold"
                    />



                <EditText
                    android:id="@+id/question1_ET"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/shadow_new"
                    android:inputType="textMultiLine"
                    android:gravity="center"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_margin="8dp">

                <TextView
                    android:id="@+id/question2_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question-2"
                    android:textColor="#5C5757"
                    android:textStyle="bold"
                    />



                <EditText
                    android:id="@+id/question2_ET"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:background="@drawable/shadow_new"
                    android:inputType="textMultiLine"
                    android:gravity="center"

                    />

            </LinearLayout>





            <Button
                android:id="@+id/Submit_Feessubmit_BT"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Save"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#FFF"
                android:background="@drawable/layout_background"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

    </ScrollView>