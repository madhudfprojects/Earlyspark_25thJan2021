                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="9:30"
                        android:visibility="gone"
                        android:textAppearance="?android:textAppearanceSmall" />


                    <TextView
