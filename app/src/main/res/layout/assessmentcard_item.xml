                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:visibility="gone"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#ffffff" />

                    <TextView
