<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="2dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="8dp"
        card_view:cardElevation="10dp"
        card_view:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/assessmentname_TV"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="0.1"
                android:clickable="false"
                android:paddingLeft="10dp"
                android:text="Assessment 1"
                android:textAppearance="?android:textAppearanceSmall" />

            <TableRow
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/level_assessment_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:clickable="false"
                    android:paddingLeft="10dp"
                    android:text="Level 1"
                    android:textAppearance="?android:textAppearanceSmall" />

                <TextView
                    android:id="@+id/institute_assessment_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="0.5"
                    android:clickable="false"
                    android:paddingLeft="10dp"
                    android:text="Institute"
                    android:textAppearance="?android:textAppearanceSmall" />

                <ImageView
                    android:id="@+id/edit_assessment_bt"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/update"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/view_assessment_bt"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/visibility"
                    android:visibility="visible"/>

            </TableRow>


            <TableRow
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/date_assessment_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="0.45"
                    android:clickable="false"
                    android:paddingLeft="10dp"
                    android:text="28-09-2019"
                    android:textAppearance="?android:textAppearanceSmall" />

                <LinearLayout
                    android:id="@+id/studentcount_assessment_layout_LL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/studentcount_assessment_TV"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:text="20/20"
                        android:textAppearance="?android:textAppearanceSmall" />


                    <TextView
